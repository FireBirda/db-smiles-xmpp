<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_transparant_endog"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/visitorAdapterRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    
    <ImageView
    android:id="@+id/visitorAdapterAvatar"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:src="@drawable/img_default_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/visitorAdapterTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="bottom"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/TextPrimaryLight"
            android:textSize="16sp"
            android:textStyle="bold"
            />

<TextView
    android:id="@+id/visitorAdapterTxtMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="marquee"
    android:gravity="top"
    android:paddingRight="3dp"
    android:singleLine="true"
    android:text="status"
    android:textColor="@color/TextSecondaryLight"
    android:textSize="14sp"
    android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/visitorAdapterTxtHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="marquee"
            android:gravity="top|right"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:text="00:00:00"
            android:textColor="@color/HitamAlphaLow"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/visitorAdapterTxtYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="marquee"
            android:gravity="top|right"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:text="status"
            android:textColor="@color/TextSecondaryLight"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
            
    </FrameLayout>
