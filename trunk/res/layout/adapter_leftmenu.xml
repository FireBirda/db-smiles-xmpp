<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterLeftMenuRoot"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/expander_account_dark" >

    <LinearLayout
        android:id="@+id/adapterLeftMenuBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_transparant_endog"
        android:padding="5dp"
        android:orientation="horizontal" >	

	    <TextView
	        android:id="@+id/adapterLeftMenuText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:paddingLeft="5dp"
	        android:text="Menu Title"
	        android:textColor="@color/Putih"
	        android:textSize="18sp" />

		<TextView
		    android:id="@+id/adapterLeftMenuCounter"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:paddingRight="8dp"
		    android:text="0"
		    android:textColor="@color/barGrup"
		    android:textSize="18sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/adapterLeftMenuSelected"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:background="@color/BiruNdogAsin"
        android:minHeight="30dp" >

    </FrameLayout>

</FrameLayout>
