<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterFriendRequestRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/adapterFriendRequestAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:src="@drawable/img_default_avatar" />

        <LinearLayout
            android:id="@+id/adapterFriendRequestLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <FrameLayout
                android:id="@+id/adapterFriendRequestBtnOK"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_defaultb"
                android:clickable="true"
                android:minWidth="40dp" >

                <TextView
                    android:id="@+id/adapterFriendRequestBtnTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:textSize="16sp"
                    android:text="@string/formGlobalApprove"
                    android:textColor="@color/Putih" />

            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/adapterFriendRequestName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/adapterFriendRequestLinear"
            android:layout_toRightOf="@+id/adapterFriendRequestAvatar"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/TextPrimaryLight"
            android:textSize="18sp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/AbuTuaVeryLow" >
    </FrameLayout>

</LinearLayout>
