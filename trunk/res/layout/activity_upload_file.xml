<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uploadFileRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HitamAlphaMed"
    android:padding="20dp" >

    <FrameLayout
        android:id="@+id/uploadFileViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/img_bg_frame_putih" >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/BiruNdogAsin" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Sending File"
                    android:textSize="20sp"
                    android:textColor="@color/Putih" />
<FrameLayout
                        android:id="@+id/uploadFileBtnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/btn_transparant_endogmed"
                        android:clickable="true"
                        android:padding="8dp" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_close_btn" />

                    </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/Putih" >

            </FrameLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone" >

  </FrameLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="visible" >

      <LinearLayout
          android:id="@+id/uploadFileContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="5dp" >

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="5dp" >
          </FrameLayout>

          <ImageView
              android:id="@+id/uploadFileThumb"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/img_default_avatar" />
<FrameLayout
              android:layout_width="match_parent"
              android:layout_height="10dp" >
          </FrameLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="TextView"
    android:textColor="@color/TextPrimaryLight" />

<EditText
    android:id="@+id/uploadFileEditDesc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textMultiLine" >
</EditText>
<FrameLayout
              android:layout_width="match_parent"
              android:layout_height="5dp" >
          </FrameLayout>
          <FrameLayout
              android:id="@+id/uploadFileBtnSend"
              android:layout_width="120dp"
              android:layout_height="30dp"
              android:layout_gravity="center"
              android:background="@drawable/btn_defaultb"
              android:clickable="true" >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="@string/formGlobalSend"
                  android:textColor="@color/Putih" />
          </FrameLayout>

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="5dp" >
          </FrameLayout>
      </LinearLayout>

      <ProgressBar
          android:id="@+id/uploadFileProgress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:layout_gravity="center" />

  </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
