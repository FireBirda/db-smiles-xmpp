<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatViewRootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.digitalbuana.smiles.ui.widget.PageSwitcher
            android:id="@+id/switcher"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_above="@+id/chatViewContainerSticker"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

        </com.digitalbuana.smiles.ui.widget.PageSwitcher>

        <FrameLayout
            android:id="@+id/chatViewContainerSticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@color/AbuStandard" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

               

                <android.support.v4.view.ViewPager
                    android:id="@+id/chatViewPagerSticker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </android.support.v4.view.ViewPager>
 				<com.digitalbuana.smiles.ui.widget.PageControl
                    android:id="@+id/chatViewPagerPageControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" 
                    >

                </com.digitalbuana.smiles.ui.widget.PageControl>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/AbuTuaVeryLow" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal" >

                            <FrameLayout
                                android:id="@+id/chatViewBtnAttachemt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/BiruNdogAsin" >

                                <TextView
                                    android:id="@+id/chatViewTxtAtachment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:text="Attachments"
                                    android:textColor="@color/Putih" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/chatViewBtnEmotion"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/AbuTuaVeryLow" >

                                <TextView
                                    android:id="@+id/chatViewTxtEmotion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:text="Emoticons"
                                    android:textColor="@color/TextSecondaryLight" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/chatViewBtnSticker"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/AbuTuaVeryLow" >

                                <TextView
                                    android:id="@+id/chatViewTxtSticker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:text="Sticker"
                                    android:textColor="@color/TextSecondaryLight" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/chatViewBtnIkonia"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/AbuTuaVeryLow" >

                                <TextView
                                    android:id="@+id/chatViewTxtIkonia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:text="Ikonia"
                                    android:textColor="@color/TextSecondaryLight" />
                            </FrameLayout>

                             <FrameLayout
                                 android:layout_width="wrap_content"
                                 android:layout_height="match_parent"
                                 android:background="@color/AbuTuaVeryLow" >
							<FrameLayout
                                 android:id="@+id/chatViewBtnAddSticker"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:background="@drawable/btn_transparant_endog"
                                 android:clickable="true" >
                                <TextView
                                    android:id="@+id/chatViewTxtAddSticker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:text="Add Sticker"
                                    android:textColor="@color/TextSecondaryLight" />
                               </FrameLayout>
                            </FrameLayout>
                        </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>