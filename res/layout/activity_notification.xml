<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationRootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/AbuStandard" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/title_top_bg_light" >
            
            <FrameLayout
			    android:id="@+id/notificationButtonClear"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_gravity="right"
			    android:background="@drawable/btn_transparant_endog"
			    android:clickable="true"
			    android:padding="15dp" >

				<TextView
				    android:id="@+id/clearTextButton"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="clear"
				    android:textColor="@color/MerahTua" />

               </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/NotificationTitle"
                android:textColor="@color/TextPrimaryLight"
                android:textSize="20sp" />
<FrameLayout
				    android:id="@+id/notificationbtnBack"
				    android:layout_width="40dp"
				    android:layout_height="match_parent"
				    android:layout_gravity="left"
				    android:background="@drawable/btn_transparant_endog"
				    android:clickable="true"
				    android:padding="15dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_title_left_btn" />

                </FrameLayout>
        </FrameLayout>

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/AbuStandard" >

           <ListView
               android:id="@+id/adminNotifList"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" >
           </ListView>
           
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_shadow_dramatisir" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
