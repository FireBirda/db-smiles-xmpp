<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/homeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/title_top_bg_light" >

                <ImageView
                    android:id="@+id/smilesHomeHeaderImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/img_logo_smiles" />

				<FrameLayout
				    android:id="@+id/homeTitleBtnShowMenu"
				    android:layout_width="40dp"
				    android:layout_height="match_parent"
				    android:layout_gravity="left"
				    android:background="@drawable/btn_transparant_endog"
				    android:clickable="true"
				    android:padding="15dp" >

                    <ImageView
                        android:id="@+id/homeLeftMenuIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_title_left_btn" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/homeTitleBtnShowEntertaint"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_transparant_endog"
                    android:clickable="true"
                    android:padding="15dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_title_right_btn" />

                </FrameLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/AbuStandard" >

                <ListView
                    android:id="@android:id/list"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/AbuStandard"
                    android:cacheColorHint="@color/AbuStandard"
                    android:fadingEdge="none"
                    android:overScrollMode="never"
                    android:textFilterEnabled="true"
                    android:listSelector="@color/Transparan"
                    android:drawSelectorOnTop="true"
                    >
                </ListView>

                <!-- <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    layout="@layout/view_loading_kakatua" /> -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_shadow_dramatisir" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/homeStartContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/AbuStandard" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/homeStartImgTopLogo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_logo_smiles_tag" />

                <ImageView
                    android:id="@+id/homeStartCewe"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/img_start_cewe" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="10dp" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp" >

                        <FrameLayout
                            android:id="@+id/homeStartBtnRegister"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:background="@drawable/btn_defaultb"
                            android:clickable="true" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Register"
                                android:textColor="@color/Putih" />
                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp" >

                        <FrameLayout
                            android:id="@+id/homeStartBtnLogin"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:background="@drawable/btn_defaulta"
                            android:clickable="true" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Login"
                                android:textColor="@color/AbuTuaHigh" />
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
    
</FrameLayout>
